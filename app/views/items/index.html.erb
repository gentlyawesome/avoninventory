<div class="row">
<div class="col-md-8">
<%= render 'list_items' %>
</div>

<div class="col-md-4">
<h1>Add Item</h1>
<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description, :class => "form-control" %>
  </div>
  <div class="field">
    <%= f.label :quantity %><br>
    <%= f.number_field :quantity, :class => "form-control input-lg" %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, :class => "form-control input-lg", :step => 'any' %>
  </div>
  <div class="actions">
    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.submit "Submit", :class => "btn btn-success btn-lg btn-block"%>
  </div>
<% end %>
</div>
</div>


